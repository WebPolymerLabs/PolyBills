{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "public",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "redirects": [
      {
        "source": "/__/auth/handler",
        "destination": "/",
        "type": 301
      }
    ],
    "cleanUrls": true
  }
}
