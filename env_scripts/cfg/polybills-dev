upstream polybills_frontend  {
  server 127.0.0.1:8080 fail_timeout=0;
}

server {
      listen 80;
      server_name polybills.firebaseapp.dev.com
      charset utf-8;

      listen 443 ssl;
      ssl_certificate /etc/nginx/ssl/nginx-polybills.crt;
      ssl_certificate_key /etc/nginx/ssl/nginx-polybills.key;

      location ~ ^[/](_)[/] {
        proxy_pass       https://polybills.firebaseapp.com;
        proxy_set_header Host polybills.firebaseapp.com;

        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;

        proxy_intercept_errors on;
        proxy_redirect off;
      }      

      location / {
          proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
          proxy_set_header Host $http_host;
          proxy_redirect off;

          if (!-f $request_filename) {
              proxy_pass http://polybills_frontend;
              break;
          }
      }
}